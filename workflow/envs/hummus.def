    r-wk \
    r-xfun \
    r-xml \
    r-yaml \
    r-base=4.3 \
    bioconductor-dirichletmultinomial \
    r-biocmanager

    # Install python dependencies for hummus (arboreto and CIRCE to replace GENIE3 and Cicero)
    mamba activate env
    
    pip install \
    muon \
    circe-py \
    pyarrow \
    "git+https://github.com/aertslab/arboreto.git" \
    "git+https://github.com/cantinilab/HuMMuS.git@dask_update#subdirectory=hummuspy"

    # Install hummus R package from github
    Rscript -e "BiocManager::install('DirichletMultinomial', force = TRUE)"
    Rscript -e "devtools::install_github('cantinilab/HuMMuS', upgrade = 'never')"

    Rscript -e "BiocManager::install('TFBSTools', type = 'source', force = TRUE)"

    # Remove cache for lighter containers
    pip cache purge
    conda clean -a -y
