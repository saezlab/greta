Bootstrap: docker
From: ubuntu:20.04


%environment
    export PATH=/opt/:$PATH
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate env

%post

    # update apt
    apt update -y

    # basic packages (~2 min)
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends tzdata
    apt install -y build-essential  \
                   gcc \
                   libstdc++6 \
                   cmake \
                   wget \
                   curl \
                   libcurl4-openssl-dev \
                   libssl-dev \
                   libxml2-dev \
                   libcairo2-dev \
                   libxt-dev \
                   libopenblas-dev \
                   git

    # conda
    wget -O Miniforge3.sh "https://github.com/conda-forge/miniforge/releases/latest/download/Miniforge3-$(uname)-$(uname -m).sh"
    bash Miniforge3.sh -b -p "/opt/conda"
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate

    # Create env
    mamba create -y -n env -c conda-forge -c bioconda \
    python=3.11 \
    mudata \
    r-base \
    r-matrix \
    r-fnn \
    r-slam \
    r-xgboost \
    r-ggplot2 \
    r-patchwork \
    r-signac \
    bioconductor-cicero \
    bioconductor-genomicranges \
    r-stringr \
    bioconductor-chromvar \
    bioconductor-motifmatchr \
    bioconductor-genomicranges \
    r-rcolorbrewer \
    bioconductor-ensdb.hsapiens.v86 \
    bioconductor-ensdb.mmusculus.v79 \
    r-hdf5r \
    bioconductor-rhdf5 \
    r-devtools \
    r-fastdummies \
    r-rcpphnsw \
    bioconductor-bsgenome.hsapiens.ucsc.hg38 \
    bioconductor-bsgenome.mmusculus.ucsc.mm10 \
    bioconductor-jaspar2016 \
    conda-forge::r-seurat==4.4.0 \
    bioconductor-data-packages \
    bioconductor-genomeinfodbdata \
    bioconductor-hsmmsinglecell

    # Install from devtools
    conda activate env
    Rscript -e "devtools::install_github('PauBadiaM/DIRECT-NET', upgrade = 'never')"
    Rscript -e "devtools::install_github('immunogenomics/presto', upgrade = 'never')"


    # Remove cache for lighter containers
    pip cache purge
    conda clean -a -y

