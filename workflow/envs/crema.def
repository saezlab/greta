Bootstrap: docker
From: ubuntu:20.04


%environment
    export PATH=/opt/:$PATH
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate env

%post

    # update apt
    apt update -y

    # basic packages (~2 min)
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends tzdata
    apt install -y build-essential  \
                   gcc \
                   libstdc++6 \
                   cmake \
                   wget \
                   curl \
                   libcurl4-openssl-dev \
                   libssl-dev \
                   libxml2-dev \
                   libcairo2-dev \
                   libxt-dev \
                   libopenblas-dev \
                   git

    # conda
    wget -O Miniforge3.sh "https://github.com/conda-forge/miniforge/releases/latest/download/Miniforge3-$(uname)-$(uname -m).sh"
    bash Miniforge3.sh -b -p "/opt/conda"
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate

    # Create env
    mamba create -y -n env -c conda-forge -c bioconda \
    python=3.11 \
    mudata \
    bioconductor-rhdf5 \
    r-devtools \
    bioconductor-bsgenome.hsapiens.ucsc.hg38 \
    bioconductor-bsgenome.mmusculus.ucsc.mm10 \
    bioconductor-ensdb.hsapiens.v86 \
    bioconductor-ensdb.mmusculus.v79 \
    r-fastmatch \
    bioconductor-genomeinfodb \
    bioconductor-genomicranges \
    bioconductor-iranges \
    r-matrix \
    bioconductor-motifmatchr \
    r-r.utils \
    r-rcppeigen \
    bioconductor-rsamtools \
    r-signac \
    bioconductor-tfbstools \
    conda-forge::r-seurat==4.4.0 \
    bedtools \
    samtools \
    pyranges \
    tqdm

    # Install from devtools
    conda activate env
    Rscript -e "devtools::install_github('zidongzh/CREMA', upgrade = 'never')"

    # Remove cache for lighter containers
    pip cache purge
    conda clean -a -y

